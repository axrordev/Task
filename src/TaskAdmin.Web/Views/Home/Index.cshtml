<form method="post">
    <div class="d-flex justify-content-between">
        <div>
            <button type="submit" class="btn btn-secondary" formaction="/Home/BlockUsers">Block</button>
            <button type="submit" class="btn btn-secondary" formaction="/Home/UnblockUsers"> <i class="fa-solid fa-unlock"></i> Unblock</button>
            <button type="submit" class="btn btn-danger" formaction="/Home/DeleteUsers"><i class="fa-solid fa-trash-can"></i> Delete</button>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>
                    <input type="checkbox" id="selectAll" />
                </th>
                <th>Name</th>
                <th>Email</th>
                <th>Last Login</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>
                        <input type="checkbox" name="selectedUserIds" value="@user.Id" />
                    </td>
                    <td>@user.Name</td>
                    <td>@user.Email</td>
                    <td>@user.LastLoginTime?.ToString("HH:mm:ss, d MMM, yyyy")</td>
                    <td>@(user.IsBlocked ? "Blocked" : "Active")</td>
                </tr>
            }
        </tbody>
    </table>
</form>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const selectAllCheckbox = document.getElementById('selectAll');
        const checkboxes = document.querySelectorAll('table tbody input[type="checkbox"]');

        selectAllCheckbox.addEventListener('change', function () {
            checkboxes.forEach(function (checkbox) {
                checkbox.checked = selectAllCheckbox.checked;
            });
        });
    });
</script>
