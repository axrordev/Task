@using TaskAdmin.Web.Models.Accounts

@model LoginModel

@{
    ViewData["Title"] = "Account";
}
<header>
    <style>
        #intro {
            height: 10vh;
        }
        .navbar .nav-link {
            color: #fff !important;
        }
    </style>

    <div id="intro" style="margin-top: 200px">
        <div class="mask d-flex align-items-center h-100">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-xl-5 col-md-8">
                        
                        <form 
                            method="post"
                            asp-action="Login" 
                            asp-controller="Accounts" 
                            class="bg-white mb-3  rounded-5 shadow-5-strong p-5">

                            <div class="form-outline mb-4">
                                <label class="form-label" asp-for="Email">Email</label>
                                <input type="email" asp-for="Email" required class="form-control" />
                                <span class="text-danger text-sm-start" asp-validation-for="Email"></span>
                            </div>

                            <div class="form-outline mb-4">
                                <label class="form-label" asp-for="Password">Password</label>
                                <input type="password" asp-for="Password" required class="form-control" />
                                <span class="text-danger text-sm-start" asp-validation-for="Password"></span>
                            </div>

                            <div style="display:flex; ">
                                <button style="margin-right:20px" type="submit" data-mdb-ripple-color="#386f06" class="btn btn-primary btn-block">Enter</button>
                                
                            </div>
                             </form>


                             <form asp-action="Register" asp-controller="Accounts" method="post">
                                <button type="submit" data-mdb-ripple-color="#386f06" class="btn btn-danger btn-block">Register</button>
                             </form>

                        @if (ViewBag.Exception is not null)
                        {
                            <div class="alert-danger">
                                @ViewBag.Exception
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>